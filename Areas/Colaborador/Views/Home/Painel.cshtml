                                Semana
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-success">@ViewBag.VendasSemana</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-100"></i>
                            <i class="fas fa-dollar-sign fa-2x text-gray-100"></i>
                        </div>
                    </div>
                </div>
            </a>

        </div>
    </div>

    <!-- Tasks Card Example -->
    <!-- Pending Requests Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Mês
                        </div>

                        <div class="h5 mb-0 font-weight-bold text-success">@ViewBag.VendasMes</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-100"></i>
                        <i class="fas fa-dollar-sign fa-2x text-gray-100"></i>
                    </div>
