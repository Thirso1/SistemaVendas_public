
@{
    ViewData["Title"] = "Painel";
}

<h2 class="display-4 text-success">Vendas</h2>

<div class="row">
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">

            <a href="@Url.Action("Index", "Venda")?pagina=1&selectClienteVenda=&dataInicio=@DateTime.Today&dataFim=@DateTime.Today.AddDays(1)&statusVenda=">

                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Hoje
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-success">@ViewBag.VendasHoje</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-100"></i>
