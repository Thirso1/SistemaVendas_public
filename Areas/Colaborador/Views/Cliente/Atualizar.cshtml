@model SistemaVendas.Models.Cliente
@{
    ViewData["Title"] = "CadastroCliente";
}
<form method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        Atualizar cliente
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <h4 class="card-title mt-2">Cadastro</h4>
                            </header>
                            <article class="card-body">
                                @{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml"); }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" value="@Model.Nome">
                                        <input type="hidden" asp-for="Id" value="@Model.Id">
                                        <span asp-validation-for="Nome"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CPF_CNPJ">CPF/CNPJ</label>
                                    <input type="text" asp-for="CPF_CNPJ" class="form-control cpf" value="@Model.CPF_CNPJ">
                                    <span asp-validation-for="CPF_CNPJ"></span>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Telefone">Telefone</label>
                                        <input type="text" asp-for="Telefone" class="form-control telefone" value="@Model.Telefone">
                                        <span asp-validation-for="Telefone"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Telefone_2">Telefone</label>
                                        <input type="text" asp-for="Telefone_2" class="form-control telefone" value="@Model.Telefone_2">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">E-mail</label>
                                    <input type="text" asp-for="Email" class="form-control" value="@Model.Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Complemento">Complemento</label>
                                    <input type="text" asp-for="Complemento" class="form-control" value="@Model.Complemento">
                                    <span asp-validation-for="Complemento"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Endereco">Endereço</label>
                                    <input type="text" asp-for="Endereco" class="form-control" value="@Model.Endereco">
                                    <span asp-validation-for="Endereco"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Numero">Número</label>
                                    <input type="text" asp-for="Numero" class="form-control" value="@Model.Numero">
                                    <span asp-validation-for="Numero"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Bairro">Bairro</label>
                                    <input type="text" asp-for="Bairro" class="form-control" value="@Model.Bairro">
                                    <span asp-validation-for="Bairro"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cidade">Cidade</label>
                                    <input type="text" asp-for="Cidade" class="form-control" value="@Model.Cidade">
                                    <span asp-validation-for="Cidade"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Estado">Estado</label>
                                    <input type="text" asp-for="Estado" class="form-control" value="@Model.Estado">
                                    <span asp-validation-for="Estado"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="CEP">CEP</label>
                                    <input type="text" asp-for="CEP" class="no-cep cep form-control" value="@Model.CEP">
                                    <span asp-validation-for="CEP"></span>
                                    <div class="alert alert-danger" style="display:none;"></div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Atualizar </button>
                                </div>

                            </article>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>
