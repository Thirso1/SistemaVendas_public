@model SistemaVendas.Models.Produto
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<form method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="row">
        @*linha do estoque*@
        <div class="form-group col-md-4">
            <label>Estoque Atual</label>
            <div class="input-group mb-2">
                <input asp-for="Estoque" class="form-control qtdePeso" placeholder="Digite a qtde Estoque" />
                <div class="input-group-prepend">
                    <div class="input-group-text">unid</div>
                </div>
            </div>
            <span asp-validation-for="Estoque" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        @*linha dos preços*@
        <div class="form-group col-md-4">
            <label asp-for="ValorCusto"></label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                </div>
                <input asp-for="ValorCusto" class="form-control dinheiro" placeholder="Digite o preço de custo" />
            </div>
            <span asp-validation-for="ValorCusto" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="ValorVarejo"></label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                </div>
                <input asp-for="ValorVarejo" class="form-control dinheiro" placeholder="Digite o preço para varejo" />
            </div>
            <span asp-validation-for="ValorVarejo" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="ValorAtacado"></label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                </div>
                <input asp-for="ValorAtacado" class="form-control dinheiro" placeholder="Digite o preço atacado" />
            </div>
            <span asp-validation-for="ValorAtacado" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Desconto"></label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">%</div>
                </div>
                <input asp-for="Desconto" class="form-control dinheiro" placeholder="Digite o desconto para esse produto" />
            </div>
            <span asp-validation-for="Desconto" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="FornecedorId">Fornecedor</label>
            <select asp-for="FornecedorId" class="form-control selectFornecedoProduto" id="selectFornecedoProduto" asp-items="@ViewBag.Fornecedores">
                <option value="">Selecione</option>
            </select>
            <span asp-validation-for="FornecedorId" class="text-danger"></span>
        </div>
    </div>

    <h2>|Imagem</h2>

    @{
        List<Imagem> Imagens = new List<Imagem>();
        if (Model != null)
        {
            Imagens = Model.Imagens.ToList();
        }
    }
    <div class="row Imagens">

        @if (Imagens.ElementAtOrDefault(1) != null)
        {
            <div class="col-md-2">
                <input type="file" class="input-file" />
                <div class="container-img-thumbnail">
                    <span class="helper"></span><img src="@Imagens.ElementAtOrDefault(1).Caminho" class="img-thumbnail img-upload" />
                </div>
                <div class="btn btn-danger btn-imagem-excluir">X</div>
                <input type="text" name="imagem" value="@Imagens.ElementAtOrDefault(1).Caminho" />
            </div>
        }
        else
        {
            <div class="col-md-2">
                <input type="file" class="input-file" />
                <div class="container-img-thumbnail">
                    <span class="helper"></span><img src="~/img/no-image.svg" class="img-thumbnail img-upload" />
                </div>
                <div class="btn btn-danger btn-imagem-excluir btn-ocultar">Excluir</div>
                <input type="text" name="imagem" />
            </div>
        }

    </div>


    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>